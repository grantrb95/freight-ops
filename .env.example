# ============================================================================
# Freight Operations Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# Anthropic (Claude) - Recommended for rate analysis and compliance
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI (GPT) - Alternative for dispatch and routing
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Default LLM provider (anthropic or openai)
DEFAULT_LLM_PROVIDER=anthropic

# ============================================================================
# Load Board APIs
# ============================================================================

# DAT Load Board - https://www.dat.com/
# Provides access to DAT One, RateView, and freight matching
DAT_API_KEY=your_dat_api_key_here
DAT_API_SECRET=your_dat_api_secret_here
DAT_API_BASE_URL=https://api.dat.com/v1

# Truckstop.com - https://truckstop.com/
# Access to load board, rate analysis, and carrier management
TRUCKSTOP_API_KEY=your_truckstop_api_key_here
TRUCKSTOP_CLIENT_ID=your_client_id_here
TRUCKSTOP_CLIENT_SECRET=your_client_secret_here
TRUCKSTOP_API_BASE_URL=https://api.truckstop.com/v2

# ============================================================================
# Mapping and Route Optimization
# ============================================================================

# Google Maps Platform
# Used for routing, distance calculation, and traffic data
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Alternative: MapBox
MAPBOX_API_KEY=your_mapbox_api_key_here

# HERE Maps (for truck-specific routing)
HERE_API_KEY=your_here_api_key_here

# ============================================================================
# Fuel Price APIs
# ============================================================================

# OPIS Fuel Prices - https://www.opisnet.com/
OPIS_API_KEY=your_opis_api_key_here

# Alternative: GasBuddy Business API
GASBUDDY_API_KEY=your_gasbuddy_api_key_here

# ============================================================================
# Financial and Payment APIs
# ============================================================================

# QuickBooks Online (for accounting integration)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REALM_ID=your_company_id_here

# Stripe (for payment processing)
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL database URL
DATABASE_URL=postgresql://user:password@localhost:5432/freight_ops

# Redis for caching and task queue
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Email and Notifications
# ============================================================================

# SendGrid for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourcompany.com

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# GPS and Tracking
# ============================================================================

# Samsara (fleet management and GPS tracking)
SAMSARA_API_TOKEN=your_samsara_api_token_here

# Geotab (alternative GPS tracking)
GEOTAB_DATABASE=your_database_name
GEOTAB_USERNAME=your_username
GEOTAB_PASSWORD=your_password

# ============================================================================
# Compliance and Regulatory
# ============================================================================

# FMCSA Web Services (for carrier safety data)
FMCSA_API_KEY=your_fmcsa_api_key_here

# IFTA API (if using third-party IFTA service)
IFTA_API_KEY=your_ifta_api_key_here

# ============================================================================
# MCP Server Configuration
# ============================================================================

# MCP server authentication tokens
MCP_SERVER_AUTH_TOKEN=your_mcp_auth_token_here

# open-ptc-agent integration
OPEN_PTC_AGENT_URL=http://localhost:8000
OPEN_PTC_AGENT_API_KEY=your_open_ptc_agent_key_here

# ============================================================================
# Application Settings
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production

# ============================================================================
# Business Configuration
# ============================================================================

# Company information
COMPANY_NAME=Your Trucking Company
COMPANY_DOT_NUMBER=1234567
COMPANY_MC_NUMBER=MC123456

# Default operating costs (USD)
COST_PER_MILE=1.50
FUEL_SURCHARGE_THRESHOLD=3.50
DRIVER_PAY_PERCENTAGE=0.70

# Geographic home base (for deadhead calculations)
HOME_BASE_ZIP=75001
HOME_BASE_CITY=Dallas
HOME_BASE_STATE=TX

# ============================================================================
# Rate Thresholds
# ============================================================================

# Minimum acceptable rate per mile (loaded)
MIN_RATE_PER_MILE=2.00

# Maximum acceptable deadhead percentage
MAX_DEADHEAD_PERCENTAGE=15

# Minimum load value
MIN_LOAD_VALUE=500

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable specific features
ENABLE_AUTO_BOOKING=false
ENABLE_PREDICTIVE_RATES=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_AUTO_SETTLEMENTS=false

# ============================================================================
# External Integrations (Optional)
# ============================================================================

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Weather API (for route planning)
WEATHER_API_KEY=your_weather_api_key_here

# ============================================================================
# Testing and Development
# ============================================================================

# Use mock APIs for development (true/false)
USE_MOCK_LOAD_BOARDS=false
USE_MOCK_GPS=false

# Test mode settings
TEST_MODE=false
PYTEST_TIMEOUT=300
